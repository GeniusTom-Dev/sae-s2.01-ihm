<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.gluonhq.maps.MapView?>
<?import javafx.scene.shape.Circle?>
<BorderPane maxHeight="720" maxWidth="1280" prefHeight="720" prefWidth="1280"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="fr.iut.sae.controlers.EarthquakesResearchController">

    <center>
        <HBox>
            <VBox prefHeight="720" prefWidth="680">
                <HBox>
                    <Label text="Recherche"/>
                    <TextField/>
                </HBox>
                <ScrollPane>
                    <GridPane alignment="center" gridLinesVisible="false" hgap="10" vgap="5" fx:id="chart">
                        <!-- selection de l'attribut recherché -->
                        <CheckBox GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="checkBoxId"/>
                        <CheckBox GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="checkBoxDate"/>
                        <CheckBox GridPane.columnIndex="2" GridPane.rowIndex="0" fx:id="checkBoxHour"/>
                        <CheckBox GridPane.columnIndex="3" GridPane.rowIndex="0" fx:id="checkBoxName"/>
                        <CheckBox GridPane.columnIndex="4" GridPane.rowIndex="0" fx:id="checkBoxIntensity"/>
                        <CheckBox GridPane.columnIndex="5" GridPane.rowIndex="0" fx:id="checkBoxQuality"/>
                        <CheckBox GridPane.columnIndex="6" GridPane.rowIndex="0" fx:id="checkBoxArea"/>
                        <!-- première ligne (fixe) -->
                        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Identifiant"/>
                        <Label GridPane.columnIndex="1" GridPane.rowIndex="1" text="Date (AAAA/MM/JJ)"/>
                        <Label GridPane.columnIndex="2" GridPane.rowIndex="1" text="Heure"/>
                        <Label GridPane.columnIndex="3" GridPane.rowIndex="1" text="Nom"/>
                        <Label GridPane.columnIndex="4" GridPane.rowIndex="1" text="Intensité épicentrale"/>
                        <Label GridPane.columnIndex="5" GridPane.rowIndex="1" text="Qualité intensité épicentrale"/>
                        <Label GridPane.columnIndex="6" GridPane.rowIndex="1" text="Région épicentrale"/>
                    </GridPane>
                </ScrollPane>
            </VBox>
            <VBox fx:id="mapZone" prefWidth="600" prefHeight="720">
                <MapView fx:id="map" prefWidth="600" prefHeight="650"/>
                <Label alignment="CENTER" text="Légende"/>

                <GridPane alignment="CENTER" hgap="5" vgap="5" prefWidth="600">
                    <Circle GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="unknown"/>
                    <Label text="Ressenti intensité inconnue" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Circle GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="twoToTwoPointFive"/>
                    <Label text="2 et 2.5 ressenti par de rares personnes" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Circle GridPane.columnIndex="0" GridPane.rowIndex="2" fx:id="threeToThreePointFive"/>
                    <Label text="3 et 3.5 ressenti par quelques personnes" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Circle GridPane.columnIndex="0" GridPane.rowIndex="3" fx:id="fourToFourPointFive"/>
                    <Label text="4 et 4.5 ressenti largement" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Circle GridPane.columnIndex="0" GridPane.rowIndex="4" fx:id="fiveToFivePointFive"/>
                    <Label text="5 et 5.5 ressenti par tout le monde" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Circle GridPane.columnIndex="0" GridPane.rowIndex="5" fx:id="sixToSixPointFive"/>
                    <Label text="6 et 6.5 dommages légers" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Circle GridPane.columnIndex="0" GridPane.rowIndex="6" fx:id="sevenToSevenPointFive"/>
                    <Label text="7 et 7.5 dommages prononcés" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Circle GridPane.columnIndex="0" GridPane.rowIndex="7" fx:id="eightToEightPointFive"/>
                    <Label text="8 et 8.5 dégats massifs" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                    <Circle GridPane.columnIndex="0" GridPane.rowIndex="8" fx:id="nineToNinePointFive"/>
                    <Label text="9 et 9.5 destructions nombreuses" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                </GridPane>
            </VBox>
        </HBox>
    </center>

</BorderPane>
