<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.gluonhq.maps.MapView?>
<BorderPane maxHeight="720" maxWidth="1280" prefHeight="720" prefWidth="1280"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="fr.iut.sae.controlers.EarthquakesResearchController">

    <center>
        <HBox>
            <VBox prefHeight="720" prefWidth="680">
                <HBox>
                    <Label text="Recherche"/>
                    <TextField/>
                </HBox>
                <GridPane alignment="center" hgap="10" vgap="10" >
                    <!-- première ligne (fixe) -->
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Identifiant"/>
                    <Label GridPane.columnIndex="1" GridPane.rowIndex="0" text="Date (AAAA/MM/JJ)"/>
                    <Label GridPane.columnIndex="2" GridPane.rowIndex="0" text="Heure"/>
                    <Label GridPane.columnIndex="3" GridPane.rowIndex="0" text="Nom"/>
                    <Label GridPane.columnIndex="4" GridPane.rowIndex="0" text="Intensité épicentrale"/>
                    <Label GridPane.columnIndex="5" GridPane.rowIndex="0" text="Qualité intensité épicentrale"/>
                    <Label GridPane.columnIndex="6" GridPane.rowIndex="0" text="Région épicentrale"/>
                </GridPane>
            </VBox>
            <VBox fx:id="mapZone" prefWidth="600" prefHeight="720">
                <MapView fx:id="map" prefWidth="600" prefHeight="650"/>
            </VBox>
        </HBox>
    </center>

</BorderPane>
